<Window x:Class="PL.Call.CallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Call"
        mc:Ignorable="d"
        Title="CallWindow" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <Grid>
        <Label Content="CallType" HorizontalAlignment="Left" Margin="270,93,0,0" VerticalAlignment="Top"/>
        <ComboBox SelectionChanged="Selected_callType" ItemsSource="{Binding Source={StaticResource callTypeCollectionKey}}" SelectedValue="{Binding Path=callType, Mode=TwoWay}"  HorizontalAlignment="Left" Margin="400,95,0,0" VerticalAlignment="Top" Height="25" Width="142" />
        <Label Content="Description" HorizontalAlignment="Left" Margin="270,122,0,0" VerticalAlignment="Top"/>
        <TextBox  Text="{Binding CurrentCall.Description, Mode=TwoWay, NotifyOnValidationError=true,  ValidatesOnExceptions=true}" HorizontalAlignment="Left" Margin="400,126,0,0" VerticalAlignment="Top" Height="25" Width="142"/>
        <Label Content="FullAdress"  HorizontalAlignment="Left" Margin="270,152,0,0" VerticalAlignment="Top"/>
        <Label Content="Latitude" HorizontalAlignment="Left" Margin="270,182,0,0" VerticalAlignment="Top"/>
        <Label Content="longtitude" HorizontalAlignment="Left" Margin="270,212,0,0" VerticalAlignment="Top"/>
        <Label Content="OpeningCallTime" HorizontalAlignment="Left" Margin="270,242,0,0" VerticalAlignment="Top"/>
        <Label Content="MaxTimeToEnd" HorizontalAlignment="Left" Margin="270,271,0,0" VerticalAlignment="Top"/>
        <TextBox Text="{Binding CurrentCall.FullAddress, Mode=TwoWay, NotifyOnValidationError=true,  ValidatesOnExceptions=true}" HorizontalAlignment="Left" Margin="400,156,0,0" VerticalAlignment="Top" Height="25" Width="142" />
        <TextBox Text="{Binding CurrentCall.Latitude, Mode=TwoWay, NotifyOnValidationError=true,  ValidatesOnExceptions=true}" HorizontalAlignment="Left" Margin="400,186,0,0" VerticalAlignment="Top" Height="25" Width="142"/>
        <TextBox Text="{Binding  CurrentCall.longtitude, Mode=TwoWay, NotifyOnValidationError=true,  ValidatesOnExceptions=true}" HorizontalAlignment="Left" Margin="400,217,0,0" VerticalAlignment="Top" Height="25" Width="142"/>
        <DatePicker DisplayDate="{Binding CurrentCall.OpeningTime, Mode=TwoWay, NotifyOnValidationError=true,  ValidatesOnExceptions=true}" HorizontalAlignment="Left" Margin="400,248,0,0" VerticalAlignment="Top" Height="25" Width="142" Text="05/18/2025"/>
        <DatePicker Text="{Binding CurrentCall.MaxFinishTime, Mode=TwoWay, NotifyOnValidationError=true,  ValidatesOnExceptions=true}" HorizontalAlignment="Left" Margin="400,277,0,0" VerticalAlignment="Top" Height="25"  Width="142"/>
        <Button Content="{Binding ButtonText}" Click="AddUpdate_btn" HorizontalAlignment="Center" Margin="0,358,0,0" VerticalAlignment="Top" Height="33" Width="62"/>

    </Grid>
</Window>
