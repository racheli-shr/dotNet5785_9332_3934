<Window x:Class="PL.Call.CallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Call"
        mc:Ignorable="d"
        Title="CallWindow" Height="450" Width="450"
        Loaded="Window_Loaded"
        Closed="Window_Closed"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <Grid>
        <Label IsEnabled="{Binding IsEditable,Mode=TwoWay}" Content="CallType" HorizontalAlignment="Left" Margin="107,74,0,0" VerticalAlignment="Top"/>
        <ComboBox IsEnabled="{Binding IsEditable,Mode=TwoWay}" SelectionChanged="Selected_callType" ItemsSource="{Binding Source={StaticResource callTypeCollectionKey}}" SelectedValue="{Binding Path=callType, Mode=TwoWay}"  HorizontalAlignment="Left" Margin="225,71,0,0" VerticalAlignment="Top" Height="40" Width="142" />
        <Label IsEnabled="{Binding IsEditable,Mode=TwoWay}" Content="Description" HorizontalAlignment="Left" Margin="107,119,0,0" VerticalAlignment="Top"/>
        <TextBox IsEnabled="{Binding IsEditable,Mode=TwoWay}"   Text="{Binding CurrentCall.Description, Mode=TwoWay, NotifyOnValidationError=true,  ValidatesOnExceptions=true}" HorizontalAlignment="Left" Margin="225,115,0,0" VerticalAlignment="Top" Height="40" Width="142"/>
        <Label IsEnabled="{Binding IsEditable,Mode=TwoWay}" Content="FullAdress"  HorizontalAlignment="Left" Margin="107,164,0,0" VerticalAlignment="Top"/>
        <Label IsEnabled="{Binding IsUpdatingEditable,Mode=TwoWay}" Content="OpeningCallTime" HorizontalAlignment="Left" Margin="107,205,0,0" VerticalAlignment="Top"/>
        <Label IsEnabled="{Binding IsMaxTimeEditable,Mode=TwoWay}" Content="MaxTimeToEnd" HorizontalAlignment="Left" Margin="107,250,0,0" VerticalAlignment="Top"/>
        <TextBox IsEnabled="{Binding IsEditable,Mode=TwoWay}" Text="{Binding CurrentCall.FullAddress, Mode=TwoWay, NotifyOnValidationError=true,  ValidatesOnExceptions=true}" HorizontalAlignment="Left" Margin="225,159,0,0" VerticalAlignment="Top" Height="40" Width="142" />
        <DatePicker IsEnabled="{Binding IsUpdatingEditable,Mode=TwoWay}" DisplayDate="{Binding CurrentCall.OpeningTime, Mode=TwoWay, NotifyOnValidationError=true,  ValidatesOnExceptions=true}" HorizontalAlignment="Left" Margin="225,203,0,0" VerticalAlignment="Top" Height="40" Width="142"/>
        <DatePicker IsEnabled="{Binding IsMaxTimeEditable ,Mode=TwoWay}" DisplayDate="{Binding CurrentCall.MaxFinishTime, Mode=TwoWay, NotifyOnValidationError=true,  ValidatesOnExceptions=true}" HorizontalAlignment="Left" Margin="225,247,0,0" VerticalAlignment="Top" Height="40"  Width="142"/>
        <Button Content="{Binding ButtonText}" Click="AddUpdate_btn" HorizontalAlignment="Center" Margin="0,351,0,0" VerticalAlignment="Top" Height="40" Width="89"/>

    </Grid>
</Window>
