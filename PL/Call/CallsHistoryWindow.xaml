<Window x:Class="PL.Call.CallsHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Call"
        mc:Ignorable="d"
        Title="CallsHistoryWindow" Height="480" Width="800"    
        Loaded="Window_Loaded"
        Closed="Window_Closed"
    DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" MinHeight="46"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="0,0,0,380" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Filter by End of Treatment:" VerticalAlignment="Top" FontSize="16" Margin="390,9,210,0" Grid.Column="1"/>
            <ComboBox FontSize="16" Height="30" SelectedValue="{Binding EndTreatmentType, Mode=TwoWay}" SelectionChanged="FilterClosedCalls"  ItemsSource="{Binding Source={StaticResource EndOfTreatmentCollectionKey}}" Margin="595,10,12,11" Grid.Column="1"/>
        </Grid>
        <ListView Margin="5,5,5,5" Grid.Row="1" ItemsSource="{Binding Path=ClosedCallInList}" >
            <ListView.View>
                <GridView>
                    <!-- Call ID -->
                    <GridViewColumn Header="ID" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Id}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Call Type (enum) -->
                    <GridViewColumn Header="CallType" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding CallType}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Opening Time (DateTime) -->
                    <GridViewColumn Header="Address" Width="130">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Address}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- OpeningTime -->
                    <GridViewColumn Header="OpeningTime" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding OpeningTime,StringFormat=dd/MM/yyyy HH:mm}" 
                           Foreground="DarkRed"
                           FontWeight="Bold"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- entry time to hundle -->
                    <GridViewColumn Header="Entry Time To Handle" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding EntryTimeToHandle,StringFormat=dd/MM/yyyy HH:mm}" 
                           Foreground="DarkGreen"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- actual finish time -->
                    <GridViewColumn Header="Actual Finish Time" Width="120">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ActualFinishTime,StringFormat=dd/MM/yyyy HH:mm}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- finish type (enum) -->
                    <GridViewColumn Header="FinishType" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding FinishType}" FontWeight="Bold"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>


    </Grid>
</Window>
