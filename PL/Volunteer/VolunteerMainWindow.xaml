<Window x:Class="PL.VolunteerMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Volunteer Info" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="שם פרטי:"/>
            <TextBox Text="{Binding FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="שם משפחה:"/>
            <TextBox Text="{Binding LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="כתובת:"/>
            <TextBox Text="{Binding Address, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="ת.ז:"/>
            <TextBox Text="{Binding Id}" IsEnabled="False"/>

            <TextBlock Text="תפקיד:"/>
            <ComboBox SelectedItem="{Binding Role}" IsEnabled="False"
                      ItemsSource="{Binding Source={x:Static local:RoleValues.All}}"/>

            <CheckBox Content="פעיל" IsChecked="{Binding IsActive}" Margin="0,10,0,0"/>

            <Button Content="עדכן" Click="Update_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
