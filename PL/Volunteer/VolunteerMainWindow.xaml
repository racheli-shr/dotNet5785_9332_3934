<Window x:Class="PL.VolunteerMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Volunteer Info" Height="450" Width="800">
    <Grid Margin="10">
        <WrapPanel>
            <TextBlock Text="First Nam" Height="20" Width="58"/>
            <TextBox Text="{Binding FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="20" Width="auto"/>

            <TextBlock Text="שם משפחה:" Width="72" Height="20" />
            <TextBox Text="{Binding LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="20"/>

            <TextBlock Text="כתובת:" Height="20"/>
            <TextBox Text="{Binding Address, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="20"/>

            <TextBlock Text="ת.ז:"/>
            <TextBox Text="" IsEnabled="False"/>

            <TextBlock Text="תפקיד:"/>
            <ComboBox SelectedItem="{Binding Role}" IsEnabled="False"/>

            <CheckBox Content="פעיל" IsChecked="{Binding IsActive}" Margin="0,10,0,0"/>

            <Button Content="עדכן" Click="Update_Click" Margin="0,10,0,0"/>
        </WrapPanel>
    </Grid>
</Window>
